{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "baseUrl": ".",
    "outDir": "./dist",
    "lib": [
      "dom",
      "es5",
      "ES6",

      "scripthost",
      "es2015.collection"
    ]
  },
  "exclude": [
    "node_modules/**/*"
  ],
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"]
  }
}
